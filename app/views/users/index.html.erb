<div class="well">
  <div id="messages" class="alert alert-success" ng-show="messages">
    {{messages}}
  </div>
  <% if @users.count == 0 %>
    <p>There are no users at the moment</p>
  <% else %>  
	<table class="table">
    <legend>Members</legend>
	    <thead>
	        <tr>
	          <th>Name</th>
	          <th class="hidden-xs">Email</th>
	          <th class="hidden-xs">Admin</th>
	          <th></th>
	        </tr>
	    </thead>
	    <tbody>
        <% @users.each do |user| %>
	    	<tr>
          <td><%= user.name %></td>
          <td class="hidden-xs"><%= user.email %></td>
          <td class="hidden-xs"><%= user.admin %></td>
          <td>
            <div class="btn-group">
              <%= link_to "Show user", user_path(user.id), :class => "btn btn-info btn-sm" %>
            </div>
            <div class="btn-group">
              <%= link_to "Edit user", edit_user_path(user.id), :class => "btn btn-warning btn-sm" %>
            </div>
            <div class="btn-group">
              <%= button_to "Delete user", user, :method => :delete, :confirm => "Are you sure you want to delete this user?", :class => "btn btn-danger btn-sm" %>
            </div>
          </td>
      	</tr>
        <% end %>
       </tbody>
    </table>
    <% end %>
</div>
