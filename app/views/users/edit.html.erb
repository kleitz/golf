 <div class="well"> 
  
  <%= form_for @user, :html => { :role => "form"} do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <a class="close" data-dismiss="alert">&#215;</a>
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited the changes from being saved</h4>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <Legend>Edit User</Legend>
    <div class="row">
      <div class="form-group col-md-4">
        <a href="http://gravatar.com/emails" target="_blank"><%= image_tag avatar_url(@user), class: 'img-rounded img-thumbnail', id: 'user_img' %></a>
      </div>
    </div>
    <div id="user_img_change"> 
      <span><a href="http://gravatar.com/emails">Change your picture at gravatar.com</a></span>
    </div>
    <%= f.hidden_field :gravatar_url, value: avatar_url(@user) %>
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, :class => "form-control" %>
      </div>
    </div>
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :email %>
        <%= f.text_field :email, :class => "form-control" %>
      </div>
    </div>
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :telephone %>
        <%= f.text_field :telephone, :class => "form-control" %>
      </div>
    </div>
    <% if current_user.admin == true %>
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :admin %>
        <%= f.check_box :admin %>
      </div>
    </div>
    <% end %>
    <br/>
    <div class="row">  
      <div class="form-group col-md-4">     
        <%= f.submit "Save changes", :class => "btn btn-success" %>
      </div>
    </div>
    
  <% end %>
  <div class="row">
    <div class="form-group col-md-4">
      <%= link_to "Back", :back, :class => "btn btn-info" %> 
    </div>
  </div>
</div>
