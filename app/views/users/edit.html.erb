 <div class="well"> 
  
  <%= form_for @user, :html => { :role => "form"} do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <a class="close" data-dismiss="alert">&#215;</a>
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited the changes from being saved</h4>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <Legend>Edit User</Legend>
    <div class="fileupload fileupload-new" data-provides="fileupload">
      <div class="fileupload-preview thumbnail" style="width: 120px; height: 110px;">
        <%=image_tag @user.picture_url(:thumb), :width => '100px', :alt => '@user_pic' %>
      </div>
      <div>
        <span class="btn btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><%= f.file_field :picture %></span>
        <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
      </div>
    </div> 
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, :class => "form-control" %>
      </div>
    </div>
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :email %>
        <%= f.text_field :email, :class => "form-control" %>
      </div>
    </div>
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :telephone %>
        <%= f.text_field :telephone, :class => "form-control" %>
      </div>
    </div>
    <% if current_user.admin == true %>
    <div class="row">  
      <div class="form-group col-md-4">
        <%= f.label :admin %>
        <%= f.check_box :admin %>
      </div>
    </div>
    <% end %>
    <br/>
    <div class="row">  
      <div class="form-group col-md-4">     
        <%= f.submit "Save changes", :class => "btn btn-success" %>
      </div>
    </div>
    
  <% end %>
  <div class="row">
    <div class="form-group col-md-4">
      <%= link_to "Back", :back, :class => "btn btn-info" %> 
    </div>
  </div>
</div>
