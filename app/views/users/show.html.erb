<div class="well">
	<div>
		<% if flash[:notice] %>
			<div id="messages" class="alert alert-success">
		    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		    <%= flash[:notice] %>
		  </div>
		<% end %>
		<legend><%= @user.name %></legend>
		<div class="row">
      <div class="form-group col-md-4">
        <a href="http://gravatar.com/emails" target="_blank"><%= image_tag avatar_url(@user), class: 'img-rounded img-thumbnail', id: 'user_img' %></a>
      </div>
    </div>
    <div id="user_img_change"> 
      <span><a href="http://gravatar.com/emails">Change your picture at gravatar.com</a></span>
    </div>
		<br>
		<div class="row">
			<div class="col-md-4">
				<p>E-mail: <%= @user.email %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<p>Telephone: <%= @user.telephone %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<p>Admin: <%= @user.admin %></p>
			</div>
		</div>

		<div class="btn-group">
			<%= link_to "Edit User", edit_user_path, :class => "btn btn-warning" %>
		</div>
	</div>
</div>