<div class="well">
	<div>
		<% if flash[:notice] %>
			<div id="messages" class="alert alert-success">
		    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		    <%= flash[:notice] %>
		  </div>
		<% end %>
		<legend><%= @user.name %></legend>
		<div class="row">
			<div class="col-md-4">
				<%= image_tag @user.picture_url(:thumb), :class => "img-rounded img-thumbnail" %>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-4">
				<p>E-mail: <%= @user.email %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<p>Telephone: <%= @user.telephone %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<p>Admin: <%= @user.admin %></p>
			</div>
		</div>

		<div class="btn-group">
			<%= link_to "Edit User", edit_user_path, :class => "btn btn-warning" %>
		</div>
	</div>
</div>