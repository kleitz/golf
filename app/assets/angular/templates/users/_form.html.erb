<div class="inner">  
  <form name="userEditForm" ng-submit="saveUser()">
    <legend>Edit User</legend>
    <div class="fileupload fileupload-new" data-provides="fileupload">
      <div class="fileupload-preview thumbnail" style="width: 120px; height: 110px;">
        <img src="{{user.picture.thumb.url}}" alt="users picture" />
      </div>
      <div>
        <span class="btn btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><input type="file" name="picture" ng-model="user.picture" file-upload /></span>
        <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
      </div>
    </div> 
    <div class="row-fluid">  
      <div class="control-group">
        <label class="control-label">Namn</label>
        <div class="controls">
          <input type="text" ng-model="user.name" name="userName" autofocus="true" class="span4" required/>
          <div ng-show="userEditForm.userName.$dirty" class="help-inline">
            <span class="help-inline error" ng-show="userEditForm.userName.$error.required">Name needs to be filled in</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">  
      <div class="control-group">
        <label class="control-label">E-mail</label>
        <div class="controls">    
          <input type="email" ng-model="user.email" class="span4" name="userEmail" required/>
          <div ng-show="userEditForm.userEmail.$dirty && userEditForm.userEmail.$invalid" class="help-inline">
            <span class="help-inline error" ng-show="userEditForm.userEmail.$error.required">Email needs to be filled in</span>
            <span class="help-inline error" ng-show="userEditForm.userEmail.$error.email">The email address is not valid</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="control-group">
        <div class="controls">
          <label>Telephone</label>
          <input type="text" ng-model="user.telephone" class="span4" />
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="control-group input-append">
        <label>Date of birth</label>
        

      </div>
    </div>
    <div class="row-fluid" ng-show="current_user.admin == true">
      <div class="control-group">
        <div class="controls">
          <label>Admin</label>
          <input type="hidden" name="admin" value="0" />  
          <input type="checkbox" name="admin" value="1" ng-model="user.admin" />    
        </div>
      </div>
    </div>
    <br />
    <div class="row-fluid">
      <div class="control-group noMarginLeft">
        <div class="controls">
            <input type="submit" value="Save changes" class="btn btn-success" />
        </div>
      </div>
    </div>
  </form>

</div>