<div class="inner">
  <div id="messages" class="alert alert-success" ng-show="flash.get().length && !message">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    {{flash.get()}}
  </div>
  <div id="messages" class="alert alert-success" ng-show="message">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    {{message}}
  </div>
  <legend>Games</legend>
	<table class="table">
	    <thead>
	        <tr>
	          <th>Name</th>
	          <th>Email</th>
	          <th>Admin</th>
	          <th></th>
	        </tr>
	    </thead>
	    <tbody>
	    	<tr ng-repeat="user in users">
          <td>{{user.name}}</td>
          <td>{{user.email}}</td>
          <td>{{user.admin}}</td>
          <td>
            <div class="btn-group">
            	<a href="/#/users/{{user.id}}" class="btn btn-info btn-small">Show user</a>
            </div>
            <div class="btn-group">
            	<a href="/users/edit/{{user.id}}" class="btn btn-warning btn-small">Edit user</a>
            </div>
          </td>
      	</tr>
       </tbody>
    </table>
</div>
