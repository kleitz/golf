'use strict';
/*
    This is our main launch point from Angular. We'll put anything to do with the
    general well being of our app in this file. For now it'll basically just contain
    the routing information.
 
    Our module will be called 'app'.
 
    Note: We need the empty array after the 'app' declaration, without it, you
    get an error complaining about 'No module <MODULE>'.
 */
angular.module('app', ['rails', 'ng-rails-csrf', 'ui.bootstrap','$strap.directives', 'resettableForm', 'filters'])
  .config(['$routeProvider' ,'$locationProvider' , function($routeProvider, $locationProvider){
    //$locationProvider.html5Mode(true);
    $routeProvider
      //= depend_on_asset controllers/games/create_controller.js
      //= depend_on_asset controllers/games/home_controller.js
      //= depend_on_asset controllers/games/index_controller.js
      //= depend_on_asset controllers/games/update_controller.js
      //= depend_on_asset controllers/sessions/sessions_controller.js
      //= depend_on_asset templates/games/index.html.erb
      //= depend_on_asset templates/games/new.html.erb
      //= depend_on_asset templates/games/home.html.erb

      .when('/', {templateUrl:('<%= asset_path('templates/index.html')%>')})
      .when('/games', {controller: 'GameIndexController',templateUrl: '<%= asset_path('templates/games/index.html.erb') %>'})
      .when('/game/new', {controller: 'GameController',templateUrl: '<%= asset_path('templates/games/new.html.erb') %>'})
      .when('/game/edit/:id', {controller: 'GameUpdateController',templateUrl: '<%= asset_path('templates/games/new.html.erb') %>'})
      .when('/home', {controller: 'GameHomeController', templateUrl: '<%= asset_path('templates/games/home.html.erb') %>'})
      
      
      .otherwise('/#/users') 
}]);
